import logging
import os

log_directory = "Kirebos_Networks/logs"
if not os.path.exists(log_directory):
    os.makedirs(log_directory)

system_log_path = os.path.join(log_directory, 'system.log')
logging.basicConfig(
    filename=system_log_path,
    level=logging.INFO,
    format='%(asctime)s - System - %(levelname)s - %(message)s'
)

# Événements système
logging.info("Système démarré.")
logging.info("Mise à jour du système effectuée.")
logging.warning("Espace disque faible.")
logging.error("Échec lors de la mise à jour du système.")
logging.info("Système arrêté.")
