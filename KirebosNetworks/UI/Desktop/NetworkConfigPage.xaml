<Window x:Class="KirebosNetworks.NetworkConfigPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration Réseau" Height="400" Width="600">
    <Grid>
        <TextBlock Text="Configuration Réseau" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        
        <StackPanel Margin="30">
            <TextBlock Text="SSID WiFi"/>
            <TextBox Name="ssidBox" PlaceholderText="Nom du réseau WiFi" Margin="0,10"/>
            
            <TextBlock Text="Mot de passe WiFi"/>
            <PasswordBox Name="wifiPasswordBox" PlaceholderText="Mot de passe WiFi" Margin="0,10"/>

            <TextBlock Text="Paramètres GSM (APN)"/>
            <TextBox Name="apnBox" PlaceholderText="Nom de l'APN" Margin="0,10"/>
            
            <Button Content="Enregistrer" Width="150" HorizontalAlignment="Right" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
