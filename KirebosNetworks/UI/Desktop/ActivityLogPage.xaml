<Window x:Class="KirebosNetworks.ActivityLogPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Journal des Activités" Height="600" Width="800">
    <Grid>
        <TextBlock Text="Journal des Activités Réseau" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>
        
        <DataGrid Name="activityLogGrid" AutoGenerateColumns="True" Height="400" Margin="10">
            <!-- Exemple de données -->
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Rafraîchir" Width="100" Margin="10"/>
            <Button Content="Exporter" Width="100" Margin="10"/>
            <Button Content="Effacer le Journal" Width="150" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
