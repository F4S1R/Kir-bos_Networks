<Window x:Class="KirebosNetworks.UninstallProgressPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Désinstallation en cours" Height="300" Width="400">
    <Grid>
        <Image Source="Assets/logo.png" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <TextBlock Text="Désinstallation en cours..." FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,120,0,10"/>

        <ProgressBar Name="uninstallProgressBar" Width="300" Height="20" HorizontalAlignment="Center" Margin="0,150,0,0"/>

        <ListView Name="uninstallStatusList" Width="300" Height="100" Margin="0,180,0,0" HorizontalAlignment="Center">
            <ListViewItem Content="Suppression des données utilisateur..."/>
            <ListViewItem Content="Désinstallation du module serveur..."/>
            <ListViewItem Content="Nettoyage des fichiers temporaires..."/>
        </ListView>
    </Grid>
</Window>
