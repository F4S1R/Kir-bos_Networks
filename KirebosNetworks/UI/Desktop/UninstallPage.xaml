<Window x:Class="KirebosNetworks.UninstallationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Désinstallation de Kirebos Networks" Height="400" Width="600">
    <Grid>
        <Image Source="Assets/logo.png" Width="150" Height="150" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        
        <TextBlock Text="Voulez-vous désinstaller Kirebos Networks ?" FontSize="16" HorizontalAlignment="Center" Margin="0,180,0,10"/>
        
        <CheckBox Name="removeSoftwareCheckBox" Content="Désinstaller le logiciel" IsChecked="True" HorizontalAlignment="Center" Margin="0,200,0,0"/>
        <CheckBox Name="removeServerCheckBox" Content="Désinstaller le module serveur" HorizontalAlignment="Center" Margin="0,220,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,250,0,0">
            <Button Content="Désinstaller" Width="100" Margin="10" Click="ShowUninstallProgressPopup"/>
            <Button Content="Annuler" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
