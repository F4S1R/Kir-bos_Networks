<Window x:Class="KirebosNetworks.ReportPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapports d'Activité" Height="600" Width="800">
    <Grid>
        <TextBlock Text="Rapports d'Activité" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>

        <StackPanel Margin="20">
            <TextBlock Text="Type de Rapport"/>
            <ComboBox Width="200" Margin="0,10">
                <ComboBoxItem Content="Rapport Journalier"/>
                <ComboBoxItem Content="Rapport Hebdomadaire"/>
                <ComboBoxItem Content="Rapport Mensuel"/>
            </ComboBox>
            
            <Button Content="Générer Rapport" Width="150" HorizontalAlignment="Left" Margin="0,10"/>
            <DataGrid Name="reportGrid" AutoGenerateColumns="True" Height="300" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
